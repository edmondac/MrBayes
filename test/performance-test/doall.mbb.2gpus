#!/bin/bash

EXT=b2gpus
MB_NAME=mbb
COMMAND="s/usebeagle=no/usebeagle=yes/g; s/beagleprecision=double/beagleprecision=single/g; s/beagledevice=cpu/beagledevice=gpu beaglethreads=yes/; s/\[char/char/; s/part\;\]/part;/; s/Outfiles/Outfiles\.$EXT/g"

mkdir Outfiles.$EXT

for DATASET in agtotalcore255 alcedinidae hawks nuclsu_206 nucssu_211 rpb2_199_nuc
do
	echo $DATASET.$EXT
 	sed -e "$COMMAND"  $DATASET.nex > $DATASET.$EXT.nex
 	time $MB_NAME $DATASET.$EXT.nex >& Outfiles.$EXT/$DATASET.log			
done
